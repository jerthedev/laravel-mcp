{
    "name": "jerthedev/laravel-mcp",
    "description": "A comprehensive Laravel package that provides seamless integration with the Model Context Protocol (MCP), enabling Laravel developers to easily create MCP servers that can expose Tools, Resources, and Prompts to AI applications like Claude Desktop, Claude Code, and ChatGPT Desktop.",
    "keywords": [
        "laravel",
        "mcp",
        "model-context-protocol",
        "ai",
        "claude",
        "chatgpt",
        "tools",
        "resources",
        "prompts"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Fall",
            "email": "jeremy@jerthedev.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "symfony/process": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.0"
    },
    "suggest": {
        "pusher/pusher-php-server": "Required for real-time notifications (^7.0)",
        "predis/predis": "Required for Redis-based features (^2.0)"
    },
    "autoload": {
        "psr-4": {
            "JTD\\LaravelMCP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "JTD\\LaravelMCP\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JTD\\LaravelMCP\\LaravelMcpServiceProvider"
            ],
            "aliases": {
                "Mcp": "JTD\\LaravelMCP\\Facades\\Mcp"
            }
        }
    },
    "scripts": {
        "test": "php -d memory_limit=2G vendor/bin/phpunit -c phpunit-full.xml",
        "test:fast": "vendor/bin/phpunit --testsuite=fast",
        "test:comprehensive": "php -d memory_limit=1G vendor/bin/phpunit --testsuite=comprehensive",
        "test:unit": "vendor/bin/phpunit --testsuite=Unit",
        "test:feature": "php -d memory_limit=2G vendor/bin/phpunit --testsuite=Feature", 
        "test:full": "php -d memory_limit=2G vendor/bin/phpunit -c phpunit-full.xml",
        "test:ci": "vendor/bin/phpunit --testsuite=fast --stop-on-failure",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test-coverage:fast": "vendor/bin/phpunit --testsuite=fast --coverage-html coverage-fast",
        "pint": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}